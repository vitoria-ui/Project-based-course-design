//函数功能：批量添加学生（一次输入多个）
void batchStudents(Student students[], int &count) {
        int num;
        cout << "请输入要批量添加的学生数量：";
        cin >> num;
        if(num <= 0 || count + num > 100) {
                cout << "输入无效或超出最大容量（100人）！" << endl;
                return ;
        }
        for(int i = 1; i <= num; i++) {
                Student s;
                cout << "请输入第" << i << "个学生姓名：";
                cin >> s.name;
                cout << "请输入第" << i << "个学生成绩：";
                cin >> s.score;
                if(s.score < 0 || s.score > 100) {
                        cout << "成绩必须在0~100之间，该学生添加失败！" << endl;
                        continue;
                } 
                count++;
                students[count] = s;
        }
        cout << "批量添加完成！当前共" << count << "名学生。" << endl;
} 
